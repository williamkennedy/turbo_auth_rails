<p style="color: green"><%= notice %></p>


<div class="mt-8 px-4 flex items-center justify-between">
  <div class="min-w-0 flex-1 text-center">
    <h1 class='text-lg font-bold'>Posts</h1>
  </div>
  <div class='mt-4 flex ml-4 mt-0'>
    <%= link_to new_post_path, class: 'ml-2 btn btn-primary' do %>
      <%= heroicon 'plus', options: {class: 'w-5 h-5'} %>
    <% end %>
  </div>
</div>

<div class='px-4 overflow-hidden mt-4'>

  <ul class='' id="posts">
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
  </ul>
</div
